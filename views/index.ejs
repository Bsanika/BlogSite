<%- include('partials/header.ejs') %>
<%- include("partials/navbar.ejs") %>

<div class="container mt-7 py-5 ">
    <h3>Recent Blogs</h3>

    <% blogs.reverse() %>

    <% blogs.forEach(blog => { %>
        <div class="card mt-5">
            <div class="card-body" style="border: 2px solid #efbd80">
                <p class="text-muted"> Published at: <%= blog.postedAt %></p>
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text"><%= blog.content.slice(0, 99) %>...</p>
                <a href="/post/<%= blog.id %>" class="btn btn-light" style="border: 1px solid #F6AD55">Read more</a>
                <form action="/post/<%= blog.id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-light"style="border: 1px solid #F6AD55;">Delete</button>
                </form>
                <a href="/post/<%= blog.id %>/edit" class="btn btn-light" style="border: 1px solid #F6AD55;">Edit</a>
            </div>
        </div>
    <% }) %>

</div>

<%- include('partials/footer.ejs') %>
