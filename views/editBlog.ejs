<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>

<div class="container mt-5">
    <h3 class="my-3">Edit Blog</h3>
    <form action="/post/<%= blog.id %>?_method=PUT" method="POST">
        <!-- Add a hidden input field for method override -->
        <input type="hidden" name="_method" value="PUT">
        
        <!-- Input fields for title and content -->
        <input type="text" value="<%= blog.title %>" name="title" placeholder="Enter Title" class="form-control" required>
        <textarea name="content" cols="30" rows="10" class="mt-3 form-control" placeholder="Enter Content Here..."
            required><%= blog.content %></textarea>
            
        <!-- Submit button -->
        <input type="submit" value="Update" class="mt-5 btn btn-md btn-primary">
    </form>
</div>

